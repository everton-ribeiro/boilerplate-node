{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "baseUrl": "./",
		"outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
		"paths": {
			"@src/*": ["src/*"]
		}
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
